<driver-instance>
    <name>def_RadiusDBAuthDriver</name>
    <description>This driver is created by EliteAAA Default configuration Setup. It will fetch the subscriber using value of radius attribute configured in user-identity attributes</description>
    <db-auth-driver>
    	<cacheable>false</cacheable>
        <database-datasource>def_DatabaseDatasource</database-datasource>
        <table-name>TBLRADIUSCUSTOMER</table-name>
        <db-query-timeout>2</db-query-timeout>
        <maximum-query-timeout-count>200</maximum-query-timeout-count>
        <profile-lookup-column>USER_IDENTITY</profile-lookup-column>
        <user-identity-attributes>0:1</user-identity-attributes>
        <primary-key-column>ID</primary-key-column>
        <sequence-name>SEQ_RADIUSCUSTOMER</sequence-name>
        <db-field-mappings>
            <db-field-mapping>
                <logical-name>User-Name</logical-name>
                <db-field>USERNAME</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>CUI</logical-name>
                <db-field>CUI</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>User-Password</logical-name>
                <db-field>PASSWORD</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>PasswordCheck</logical-name>
                <db-field>PASSWORDCHECK</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>EncryptionType</logical-name>
                <db-field>ENCRYPTIONTYPE</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>CustomerStatus</logical-name>
                <db-field>CUSTOMERSTATUS</db-field>
                <default-value>Active</default-value>
                <value-mapping>1=Active,0=inActive</value-mapping>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>Calling-Station-ID</logical-name>
                <db-field>CALLINGSTATIONID</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>AuthorizationPolicy</logical-name>
                <db-field>RADIUSPOLICY</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>CustomerCheckItems</logical-name>
                <db-field>CUSTOMERCHECKITEM</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>CustomerReplyItems</logical-name>
                <db-field>CUSTOMERREPLYITEM</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>ExpiryDate</logical-name>
                <db-field>EXPIRYDATE</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>CreditLimit</logical-name>
                <db-field>CREDITLIMIT</db-field>
            </db-field-mapping>
            <db-field-mapping>
                <logical-name>LoginPolicy</logical-name>
                <db-field>CONCURRENTLOGINPOLICY</db-field>
            </db-field-mapping>
        </db-field-mappings>
    </db-auth-driver>
</driver-instance>
